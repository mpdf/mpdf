{
  "name": "ghans/mpdf-laravel-wrapper",
  "description": "Fork from mpdf/mpdf adapted to laravel 5.*",
  "type": "library",
  "require": {
    "php": ">=5.6",
    "ext-gd": "*",
    "ext-mbstring": "*",
    "illuminate/support": "5.*",
    "laravel/laravel": "5.*",
    "psr/log": "^1.0",
    "setasign/fpdi": "1.6.*",
    "paragonie/random_compat": ">=1.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.0",
    "mockery/mockery": "^0.9.5",
    "squizlabs/php_codesniffer": "^2.7.0",
    "tracy/tracy": "^2.4"
  },
  "suggest": {
    "ext-bcmath": "Needed for generation of some types of barcodes",
    "ext-zlib": "Needed for compression of embedded resources, such as fonts",
    "ext-xml": "Needed mainly for SVG manipulation"
  },
  "license": "GPL-2.0",
  "authors": [
    {
      "name": "Gabriel Hans Gonzalez",
      "email": "ghans@intecfra.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Mpdf\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mpdf\\": "tests/Mpdf"
    },
    "files": [
      "src/functions-dev.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"chmod('./storage/app/', 0777);\""
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "Mpdf\\Providers\\PDFServiceProvider"
      ],
      "aliases": {
        "mpdf": "Mpdf\\Providers\\PDFFacade"
      }
    }
  },
  "minimum-stability": "dev"
}
