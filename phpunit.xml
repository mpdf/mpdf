<phpunit
	bootstrap="tests/bootstrap.php"
	colors="true"
	backupGlobals="false">

	<testsuites>
		<testsuite>
			<directory suffix=".php">./tests</directory>
		</testsuite>
	</testsuites>

	<groups>
		<exclude>
			<group>snapshot</group>
		</exclude>
	</groups>

	<filter>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">src</directory>
		</whitelist>
	</filter>

</phpunit>
