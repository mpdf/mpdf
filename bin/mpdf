#!/usr/bin/env php
<?php

use Mpdf\Console\Command\BuildSnapshots;
use Mpdf\Console\Command\CompareSnapshots;
use Symfony\Component\Console\Application;
use Symfony\Component\Filesystem\Filesystem;

define('MPDF_ROOT', __DIR__ . '/../');

require_once MPDF_ROOT . 'vendor/autoload.php';

$application = new Application();
$fs = new Filesystem();

/* Register all available commands */
$application->add(new BuildSnapshots($fs));
$application->add(new CompareSnapshots());

$application->run();